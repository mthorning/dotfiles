{
  "tsserver.enable": true,
  "typescript.suggestionActions.enabled": true,
  "javascript.suggestionActions.enabled": true,
  "typescript.format.enabled": true,
  "javascript.format.enabled": true,
  "snippets.userSnippetsDirectory": "~/dotfiles/nvim/snippets",
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["typescript"]
  },
  "suggest.noselect": false,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "suggest.enablePreselect": true,
  "suggest.maxCompleteItemCount": 20,
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.jumpCommand": "vsplit",
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true,
    "focusable": false
  },
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.messageTarget": "float",
  "hover.floatConfig": {
    "border": true,
    "rounded": true,
    "focusable": false
  },
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.useESLintClass": true,
  "eslint.packageManager": "npm",
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.requireConfig": false,
  "prettier.onlyUseLocalVersion": false,
  "prettier.disableSuccessMessage": true,
  "prettier.singleQuote": true,
  "prettier.formatterPriority": 100,
  "coc.preferences.formatOnSave": false,
  "snippets.ultisnips.pythonPrompt": false,
  "[markdown]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescript]": {
    "coc.preferences.formatOnSave": false
  },
  "[javascript]": {
    "coc.preferences.formatOnSave": false
  },
  "[typescriptreact]": {
    "coc.preferences.formatOnSave": false
  },
  "[javascriptreact]": {
    "coc.preferences.formatOnSave": false
  }
}
