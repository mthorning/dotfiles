{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Current working directory: $PWD. Verify this matches your intended Jujutsu workspace. Respond 'approve' to proceed or 'deny' if this is incorrect."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'file_path=\"${TOOL_INPUT_file_path:-}\"; [[ \"$file_path\" == *.ts || \"$file_path\" == *.tsx ]] && cd \"$(dirname \"$file_path\")\" && tsc --noEmit 2>&1 | head -20 || true'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/mthorning/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "effortLevel": "medium"
}
